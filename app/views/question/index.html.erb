<div class="container mt-5">
  <h2 class="mb-4">Question Bank</h2>

  <%= link_to 'New Question', new_question_path, class: 'btn btn-primary mb-3' %>

  <% if @questions.present? %>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Difficulty</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.title %></td>
            <td><%= question.content %></td>
            <td><%= question.difficulty %></td>
            <td><%= question.category %></td>
            <td>
              <%= link_to 'Show', question, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' },
                  class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
